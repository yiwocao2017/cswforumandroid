<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/intervalColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModifyNameActivity">

    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:text="修改登录名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:layout_margin="15dp"
        android:textColor="@color/font_red"
        android:textSize="12sp"
        android:text="登录名只能修改一次，请认真考虑后再做修改"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@drawable/corners_sign_edt_top"
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="原登录名"
            android:textSize="14sp"
            android:textColor="@color/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_name_old"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="18984955240CSW189849995240"
            android:textSize="12sp"
            android:textColor="@color/font_gray_999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/corners_sign_edt_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="新登录名"
            android:textSize="14sp"
            android:textColor="@color/font_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_name_new"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="请输入用户名"
            android:background="@null"
            android:textColorHint="@color/font_gray_999999"
            android:textSize="12sp"
            android:textColor="@color/font_gray_999999"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_confirm"
        android:gravity="center"
        android:text="保存"
        android:textSize="16sp"
        android:textColor="@color/font_white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/corners_sign"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

</LinearLayout>

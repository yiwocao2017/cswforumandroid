<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/intervalColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModifyPasswordActivity">

    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:text="修改登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/corners_sign_edt_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sign_user"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_phone"
            android:background="@null"
            android:textSize="14sp"
            android:maxLength="11"
            android:textColor="@color/font_gray"
            android:textColorHint="#bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sign_pwd"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_pwd_old"
            android:hint="原密码"
            android:background="@null"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:maxLength="11"
            android:textColor="@color/font_gray"
            android:textColorHint="#bbbbbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sign_pwd"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_pwd_new"
            android:hint="新密码,6-16位，同时包含数字和字母"
            android:textSize="14sp"
            android:maxLength="16"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/font_gray"
            android:textColorHint="#bbbbbb"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="@drawable/corners_sign_edt_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/sign_pwd"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_rePwd"
            android:hint="确认密码"
            android:textSize="14sp"
            android:maxLength="16"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/font_gray"
            android:textColorHint="#bbbbbb"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/txt_confirm"
        android:gravity="center"
        android:text="保存"
        android:textSize="16sp"
        android:textColor="@color/font_white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/corners_sign"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

</LinearLayout>

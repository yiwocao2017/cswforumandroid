<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/font_red" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.zhejiangshegndian.csw.view.RefreshLayout
        android:id="@+id/layout_refresh"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_userInfo"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_photo"
                        android:src="@mipmap/photo_default"
                        android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="20dp"
                        />

                    <RelativeLayout
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="42dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_name"
                            android:text="爆料大人"
                            android:textColor="#231815"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_level"
                            android:layout_below="@+id/txt_name"
                            android:text="论坛元老"
                            android:layout_marginTop="5dp"
                            android:textColor="#b4b4b4"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_note"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_note"
                            android:textSize="14sp"
                            android:text="0"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="帖子"
                            android:textSize="10sp"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_attention"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_attention"
                            android:textSize="14sp"
                            android:text="0"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="关注"
                            android:textSize="10sp"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_funs"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_funs"
                            android:textSize="14sp"
                            android:text="0"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="粉丝"
                            android:textSize="10sp"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_award"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_award"
                            android:textSize="14sp"
                            android:text="0"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="赏金"
                            android:textSize="10sp"
                            android:textColor="@color/font_gray_666666"
                            android:layout_marginTop="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:id="@+id/layout_goods"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_goods"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="我的物品"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_collect"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_collect"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="我的收藏"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_edit"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_edit"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="草稿箱"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_message"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_message"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="我的消息"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_unread"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/corners_unread_list"
                        android:textColor="@color/font_white"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_about"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_about"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="关于城市网"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/intervalColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_setting"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_marginLeft="26dp"
                        android:src="@mipmap/my_setting"
                        android:layout_width="27dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:text="设置"
                        android:textSize="14sp"
                        android:textColor="@color/font_gray_666666"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </com.zhejiangshegndian.csw.view.RefreshLayout>

</LinearLayout>
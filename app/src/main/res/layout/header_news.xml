<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        app:image_scale_type="center_crop"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/layout_shop"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/img_shop"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_shop"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/font_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/lineColor"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <FrameLayout
            android:id="@+id/layout_sign"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/img_sign"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_sign"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/font_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/lineColor"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <FrameLayout
            android:id="@+id/layout_active"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/img_active"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_active"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/font_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="168dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_recruit"
            android:background="@drawable/corners_news"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_recruit"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="招聘"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rent"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_rent"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="出租"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_used"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_used"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="二手"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_help"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_help"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="求助"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_people"
            android:background="@drawable/corners_news"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_people"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="便民"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_car"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_car"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="车友"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_emotion"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_emotion"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="情感"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_food"
            android:background="@drawable/corners_news"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="82dp">

            <ImageView
                android:src="@mipmap/news_food"
                android:layout_width="29dp"
                android:layout_height="23dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="吃货"
                android:textSize="11sp"
                android:textColor="@color/font_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66666666"
    android:gravity="center|bottom"
    android:id="@+id/quxiao"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_popup_top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/corners_popup_top"
                android:gravity="center"
                android:text="选择图片"
                android:textColor="#959595"
                android:textSize="12sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#A8A8A8" />

            <TextView
                android:id="@+id/txt_photograph"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#A8A8A8" />

            <TextView
                android:id="@+id/txt_album"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/corners_popup_bottom_child"
                android:gravity="center"
                android:text="相册"
                android:textColor="@color/font_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/corners_popup_bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_releasePopup_cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/corners_popup_bottom"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

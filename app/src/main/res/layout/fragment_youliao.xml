<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/txt_new"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corners_forum_btn_red"
            android:textColor="@color/font_red"
            android:textSize="12sp"
            android:text="最新发布"
            android:layout_width="70dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/txt_top"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corners_forum_btn_gray"
            android:textColor="@color/font_gray_999999"
            android:textSize="12sp"
            android:text="置顶帖"
            android:layout_width="70dp"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/txt_essence"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corners_forum_btn_gray"
            android:textColor="@color/font_gray_999999"
            android:textSize="12sp"
            android:text="精华帖"
            android:layout_width="70dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <com.zhejiangshegndian.csw.view.RefreshLayout
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_youliao"
            android:divider="@color/white"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </com.zhejiangshegndian.csw.view.RefreshLayout>


</LinearLayout>